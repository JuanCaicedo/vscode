// Cursor-native mode: cmd+L uses Cursor AI, cmd+i opens Claude
[
  // cmd+i always opens Claude
  {
    "key": "cmd+i",
    "command": "claude-vscode.focus",
  },
  {
    "key": "cmd+alt+b",
    "command": "claude-vscode.focus",
  },

  // === DVP Explorer: SPC SPC closes explorer ===
  {
    "key": "space space",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },

  // === DVP Explorer Navigation ===
  // d=left (collapse/parent), h=down, t=up, n=right (expand/enter)
  {
    "key": "d",
    "command": "list.collapse",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "h",
    "command": "list.focusDown",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "t",
    "command": "list.focusUp",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "n",
    "command": "list.expand",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
]
